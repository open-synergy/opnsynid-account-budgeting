<odoo>
    <record id="account_transfer_budget_view_tree" model="ir.ui.view">
        <field name="name">account.transfer.budget.tree</field>
        <field name="model">account.transfer_budget</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="display_name" />
                <field name="type_id" />
                <field name="user_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="account_transfer_budget_view_form" model="ir.ui.view">
        <field name="name">account.transfer.budget.form</field>
        <field name="model">account.transfer_budget</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                        confirm="Confirm Data. Are you sure?"
                        attrs="{'invisible':['|',('state','!=','draft'), ('confirm_ok','=',False)]}"
                    />
                    <button
                        name="action_request_approval"
                        string="Request Approval"
                        attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                        type="object"
                        confirm="Request Approval Data. Are you sure?"
                    />

                    <button
                        name="action_approve_approval"
                        string="Approve"
                        attrs="{'invisible': ['|', '|', '|',
                         ('approved', '=', True), ('state', 'not in', ['confirm']),
                         ('rejected', '=', True), ('approval_ids', '=', [])]}"
                        type="object"
                        class="oe_highlight"
                        confirm="Approve Data. Are you sure?"
                    />
                    <button
                        name="action_reject_approval"
                        string="Reject"
                        attrs="{'invisible': ['|', '|', '|',
                         ('approved', '=', True), ('state', 'not in', ['confirm']),
                         ('rejected', '=', True), ('approval_ids', '=', [])]}"
                        type="object"
                        confirm="Reject Data. Are you sure?"
                    />

                    <button
                        name="action_cancel"
                        type="object"
                        string="Cancel"
                        class="oe_highlight"
                        confirm="Cancel Data. Are you sure?"
                        attrs="{'invisible':['|', ('state','!=','valid'), ('cancel_ok','=',False)]}"
                    />
                    <button
                        name="action_restart"
                        type="object"
                        string="Restart"
                        class="oe_highlight"
                        confirm="Restart Data. Are you sure?"
                        attrs="{'invisible':['|', ('state','not in',['cancel','reject']),('restart_ok','=',False)]}"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirm,valid,cancel"
                    />
                </header>
                <field name="need_validation" invisible="1" />
                <field name="approved" invisible="1" />
                <field name="rejected" invisible="1" />

                <sheet>
                    <div
                        class="oe_right oe_button_box"
                        style="width: 300px;"
                        name="buttons"
                    >
                    </div>
                    <div name="header" class="oe_left" style="width: 500px;">
                        <div name="header_1" class="oe_title" style="width: 500px;">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_edit_only" />
                                <field name="display_name" class="oe_read_only" />
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group name="left">
                            <field name="type_id" />
                        </group>
                        <group name="right">
                            <field name="user_id" />
                        </group>
                    </group>

                    <group>
                        <group name="left_ori_budget">

                            <group
                                name="group_ori_budget"
                                string="Origin Budget"
                                colspan="4"
                                col="2"
                            >
                                <field name="origin_budget_id" />
                                <field name="origin_budget_line_id" />
                            </group>
                        </group>
                        <group name="right_target_budget">

                            <group
                                name="group_target_budget"
                                string="Target Budget"
                                colspan="4"
                                col="2"
                            >
                                <field name="target_budget_id" />
                                <field name="target_budget_line_id" />
                            </group>
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page name="notes" string="Notes">
                            <field name="notes" nolabel="1" />
                        </page>
                        <page
                            name="state_change_history"
                            string="States Change History"
                        >
                            <field name="state_change_history_ids" nolabel="1" />
                        </page>
                        <page name="status_check" string="Check Status">
                            <group name="status_check_1">
                                <field name="status_check_template_id" />
                                <field name="state_change_constrain_template_id" />
                            </group>
                            <field name="status_check_ids" nolabel="1" force_save="1" />
                        </page>
                        <page string="Approvals" name="tier_validation">
                            <group name="tier_validation_1" colspan="4" col="2">
                                <field name="approval_template_id" />
                                <field
                                    name="active_approver_partner_ids"
                                    widget="many2many_tags"
                                />
                            </group>
                            <field
                                name="approval_ids"
                                attrs="{'invisible':[('approval_ids', '=', [])]}"
                                nolabel="1"
                            />
                        </page>
                        <page
                            name="policy"
                            string="Policies"
                            groups="base.group_system"
                        >
                            <group name="policy_1" colspan="4" col="2">
                                <field
                                    name="policy_template_id"
                                    groups="base.group_system"
                                />
                                <field name="confirm_ok" />
                                <field name="approve_ok" />
                                <field name="reject_ok" />
                                <field name="cancel_ok" />
                                <field name="restart_ok" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="account_transfer_budget_action" model="ir.actions.act_window">
        <field name="name">Budget Transfers</field>
        <field name="res_model">account.transfer_budget</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="account_transfer_budget_menu"
        parent="account.menu_finance_entries_management"
        action="account_transfer_budget_action"
        sequence="999"
    />
</odoo>
