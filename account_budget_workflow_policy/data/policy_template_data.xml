<odoo>
<data noupdate="1">
<record id="policy_template" model="policy.template">
    <field name="name">Standard Crossovered Budget</field>
    <field name="model_id" ref="account_budget.model_crossovered_budget" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','crossovered.budget'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">result=True</field>
</record>

<record id="policy_template_detail_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','crossovered.budget'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_detail_approve" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','crossovered.budget'),('name','=','approve_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="policy_template_detail_reject" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','crossovered.budget'),('name','=','reject_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="policy_template_detail_cancel" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','crossovered.budget'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft,confirm,validate,done</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_detail_restart" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','crossovered.budget'),('name','=','restart_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">cancel,reject</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_detail_done" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','crossovered.budget'),('name','=','done_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">validate</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
</data>
</odoo>
